{
  "name": "buildr",
  "private": true,
  "workspaces": [
    "buildr-api",
    "buildr-web",
    "buildr-cli"
  ],
  "scripts": {
    "build": "yarn workspaces run build",
    "start": "concurrently \"yarn workspace buildr-api run start\" \"yarn workspace buildr-web run start\"",
    "format": "prettier --write \"**/src/**/*.{js,jsx,ts,tsx}\"",
    "lint": "prettier --check \"**/src/**/*.{js,jsx,ts,tsx}\""
  },
  "devDependencies": {
    "concurrently": "^7.0.0",
    "prettier": "^2.5.1"
  }
}